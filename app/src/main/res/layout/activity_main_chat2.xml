<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/activity_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="#EEEEEE"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:clipToOutline="true"
        android:contentDescription="Selected Animal Image"/>

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:backgroundTint="#551DC4"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:elevation="2dp"
        android:drawableEnd="@drawable/gallery3"
        android:drawablePadding="8dp"/>

    <Button
        android:id="@+id/btnDetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get First Aid"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FF3D48"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:elevation="2dp"
        android:drawableEnd="@drawable/injury2"
        android:drawablePadding="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:elevation="6dp"
        android:clipToOutline="true"
        android:background="@drawable/curved_background"
        android:outlineProvider="background"
        android:layout_marginBottom="16dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result:"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/curved_background"/>
    </ScrollView>


    <Button
        android:id="@+id/btnChatWithAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Here"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF3D48"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:elevation="2dp"
        android:drawableEnd="@drawable/chatbot2"
        android:drawablePadding="8dp"/>

</LinearLayout>
